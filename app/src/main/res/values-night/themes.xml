<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TheWitness" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_200</item>
        <item name="colorSecondaryVariant">@color/red_300</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Type -->
        <item name="textAppearanceHeadline3">@style/TextAppearance.TheWitness.HeadLine3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.TheWitness.HeadLine4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.TheWitness.HeadLine5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.TheWitness.HeadLine6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.TheWitness.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.TheWitness.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.TheWitness.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.TheWitness.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.TheWitness.Button</item>
        <item name="textAppearanceOverline">@style/TextAppearance.TheWitness.Overline</item>
        <item name="textAppearanceCaption">@style/TextAppearance.TheWitness.Caption</item>

        <!-- Shape -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.TheWitness.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.TheWitness.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.TheWitness.LargeComponent</item>
        <item name="shapeAppearanceRound">@style/ShapeAppearance.TheWitness.Round</item>
    </style>
</resources>